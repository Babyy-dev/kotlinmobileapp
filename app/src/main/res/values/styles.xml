<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Kappa.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/cinzel</item>
        <item name="android:textColor">@color/kappa_cream</item>
    </style>

    <style name="TextAppearance.Kappa.Section" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/cinzel</item>
        <item name="android:textColor">@color/kappa_cream</item>
    </style>

    <style name="TextAppearance.Kappa.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/kappa_mint_100</item>
    </style>

    <style name="TextAppearance.Kappa.Muted" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/kappa_mint_50</item>
    </style>

    <style name="TextAppearance.Kappa.Section.Dark" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/cinzel</item>
        <item name="android:textColor">@color/kappa_charcoal</item>
    </style>

    <style name="TextAppearance.Kappa.Body.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/kappa_charcoal</item>
    </style>

    <style name="TextAppearance.Kappa.Muted.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/kappa_text_muted</item>
    </style>

    <style name="Widget.Kappa.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/kappa_charcoal</item>
        <item name="backgroundTint">@color/kappa_gold_500</item>
        <item name="cornerRadius">24dp</item>
        <item name="rippleColor">@color/kappa_gold_300</item>
    </style>

    <style name="Widget.Kappa.Button.Glow" parent="Widget.Kappa.Button">
        <item name="android:animation">@anim/glow_pulse</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Widget.Kappa.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/kappa_teal_700</item>
        <item name="strokeColor">@color/kappa_teal_700</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <style name="Widget.Kappa.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/kappa_gold_700</item>
    </style>

    <style name="Widget.Kappa.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/kappa_surface</item>
        <item name="boxStrokeColor">@color/kappa_teal_700</item>
        <item name="hintTextColor">@color/kappa_mint_100</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
    </style>

    <style name="Widget.Kappa.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/nav_item_colors</item>
        <item name="itemTextColor">@color/nav_item_colors</item>
        <item name="itemRippleColor">@color/kappa_gold_300</item>
    </style>
</resources>
