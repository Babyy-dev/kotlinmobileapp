<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#0E3B35"
                android:centerColor="#0F4E47"
                android:endColor="#0A2C28" />
            <corners android:topLeftRadius="28dp" android:topRightRadius="28dp" />
        </shape>
    </item>
    <item android:inset="3dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#B89A5C" />
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp" />
        </shape>
    </item>
    <item android:inset="10dp" android:top="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#0F4E47"
                android:endColor="#0A3A36" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</layer-list>
