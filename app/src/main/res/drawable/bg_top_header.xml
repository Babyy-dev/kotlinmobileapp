<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/kappa_teal_900"
                android:centerColor="@color/kappa_teal_800"
                android:endColor="@color/kappa_teal_700" />
            <corners android:topLeftRadius="28dp" android:topRightRadius="28dp" />
        </shape>
    </item>
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/kappa_gold_500" />
            <corners android:topLeftRadius="28dp" android:topRightRadius="28dp" />
        </shape>
    </item>
</layer-list>
