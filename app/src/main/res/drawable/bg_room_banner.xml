        <shape>
            <solid android:color="@color/kappa_gold_500" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item android:inset="2dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#3F175F"
                android:endColor="#1F0D33" />
