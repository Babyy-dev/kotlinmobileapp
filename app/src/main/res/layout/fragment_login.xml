<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_emerald"
    android:fillViewport="true"
    tools:context=".main.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo/Icon at top -->
        <ImageView
            android:id="@+id/image_login_logo"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginTop="48dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/text_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Welcome to Kappa"
            android:textAppearance="@style/TextAppearance.Kappa.Headline"
            android:textColor="@color/kappa_gold_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_login_logo" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_login_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sign in to continue"
            android:textAppearance="@style/TextAppearance.Kappa.Body"
            android:textColor="@color/kappa_mint_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_login_title" />

        <!-- Login Form Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_login_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeColor="@color/kappa_outline"
            app:strokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_login_subtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_admin_panel"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:id="@+id/layout_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Username Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Kappa.TextInput">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/kappa_cream"
                            android:textColorHint="@color/kappa_text_muted" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.Kappa.TextInput">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/kappa_cream"
                            android:textColorHint="@color/kappa_text_muted" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Login Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_login"
            style="@style/Widget.Kappa.Button.Glow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textSize="16sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_toggle_login_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Use phone instead"
                    style="@style/Widget.Kappa.Button.Text" />

                <LinearLayout
                    android:id="@+id/layout_login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_login_otp_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Sign in with your number"
                        android:textAppearance="@style/TextAppearance.Kappa.Section"
                        android:textColor="@color/kappa_teal_950" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone number"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.Kappa.TextInput">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="@color/kappa_cream"
                            android:textColorHint="@color/kappa_text_muted" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="OTP code"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.Kappa.TextInput">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/kappa_cream"
                            android:textColorHint="@color/kappa_text_muted" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_send_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Send OTP" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_verify_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Verify OTP" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

                <!-- Info Text -->
                <TextView
                    android:id="@+id/text_login_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="12sp"
                    android:textColor="@color/error"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_login_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/kappa_text_muted"
                    android:gravity="center"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_guest_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Continue as Guest"
                    style="@style/Widget.Kappa.Button.Secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_go_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Create a new account"
                    style="@style/Widget.Kappa.Button.Text" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
