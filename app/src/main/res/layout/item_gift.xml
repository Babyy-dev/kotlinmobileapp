<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/bg_gift_item">

    <ImageView
        android:id="@+id/image_gift_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_gift"
        android:tint="@color/kappa_gold_300" />

    <TextView
        android:id="@+id/text_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Gift"
        android:textAppearance="@style/TextAppearance.Kappa.Body"
        android:textColor="@color/kappa_mint_100" />

    <TextView
        android:id="@+id/text_gift_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="100"
        android:textAppearance="@style/TextAppearance.Kappa.Muted"
        android:textColor="@color/kappa_gold_300" />
</LinearLayout>
