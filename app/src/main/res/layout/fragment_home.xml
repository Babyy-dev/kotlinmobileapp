<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kappa_white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".main.HomeFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/bg_top_header"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="32dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Meu"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_cream" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Popular"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_cream" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Postagens"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_cream" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/text_section_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kappa Lounge"
            android:textAppearance="@style/TextAppearance.Kappa.Headline"
            android:textColor="@color/kappa_gold_300" />

        <FrameLayout
            android:id="@+id/card_app_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_header_panel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seasonal rewards are live"
                    android:textAppearance="@style/TextAppearance.Kappa.Body"
                    android:textColor="@color/kappa_mint_100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_chip"
                        android:text="Version: 1.0"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_mint_100" />

                    <TextView
                        android:id="@+id/text_build_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_chip"
                        android:text="Build: Debug"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_mint_100" />

                    <TextView
                        android:id="@+id/text_environment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip"
                        android:text="Environment: Dev"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_mint_100" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/progress_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_home_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Kappa.Body"
            android:textColor="@color/error"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_refresh_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Refresh"
            style="@style/Widget.Kappa.Button.Secondary" />

        <TextView
            android:id="@+id/text_section_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Your Status"
            android:textAppearance="@style/TextAppearance.Kappa.Section" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/kappa_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:strokeColor="@color/kappa_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User: -"
                    android:textAppearance="@style/TextAppearance.Kappa.Body.Dark" />

                <TextView
                    android:id="@+id/text_user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Role: Loading..."
                    android:textAppearance="@style/TextAppearance.Kappa.Muted.Dark" />

                <TextView
                    android:id="@+id/text_coin_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Coins: Loading..."
                    android:textAppearance="@style/TextAppearance.Kappa.Body.Dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_section_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Quick Actions"
            android:textAppearance="@style/TextAppearance.Kappa.Section" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/kappa_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:strokeColor="@color/kappa_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jump into a live room or start your own lounge."
                    android:textAppearance="@style/TextAppearance.Kappa.Body"
                    android:textColor="@color/kappa_text_muted" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_open_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Open Rooms" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
