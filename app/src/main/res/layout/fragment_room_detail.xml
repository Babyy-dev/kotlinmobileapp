<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_emerald">

    <FrameLayout
        android:id="@+id/room_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_room_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_room_error">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_room_agency"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_profile"
                    android:tint="@color/kappa_gold_300"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/text_room_agency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Agency"
                    android:textAppearance="@style/TextAppearance.Kappa.Body"
                    android:textColor="@color/kappa_mint_100" />

                <TextView
                    android:id="@+id/text_room_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="ID: -"
                    android:textAppearance="@style/TextAppearance.Kappa.Muted"
                    android:textColor="@color/kappa_text_muted" />

                <ImageButton
                    android:id="@+id/button_room_favorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_pill_teal"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_star"
                    android:tint="@color/kappa_gold_300" />

                <ImageButton
                    android:id="@+id/button_room_minimize"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_pill_teal"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_room_tools"
                    android:tint="@color/kappa_cream" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_room_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Room"
                android:textAppearance="@style/TextAppearance.Kappa.Headline"
                android:textColor="@color/kappa_gold_300" />

            <TextView
                android:id="@+id/text_room_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Connecting..."
                android:textAppearance="@style/TextAppearance.Kappa.Body"
                android:textColor="@color/kappa_mint_100" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/text_room_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/error"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_header" />

    <TextView
        android:id="@+id/text_gift_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_inbox_badge"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="Gift sent"
        android:textColor="@color/kappa_mint_100"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_room_error" />

    <ImageView
        android:id="@+id/image_gift_overlay"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_room_gifts"
        android:tint="@color/kappa_gold_300"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/text_gift_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/room_menu_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/text_room_error"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/card_section_audio"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_room_menu_button_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_room_audio" />

                    <TextView
                        android:id="@+id/text_section_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Audio"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_cream" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_section_seats"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_room_menu_button_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_room_seats" />

                    <TextView
                        android:id="@+id/text_section_seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Seats"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_cream" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_section_chat"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_room_menu_button_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <TextView
                    android:id="@+id/text_room_chat_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_inbox_badge"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="0"
                    android:textColor="@color/kappa_mint_100"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_room_chat" />

                    <TextView
                        android:id="@+id/text_section_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Chat"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_cream" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_section_rewards"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_room_menu_button_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/text_section_rewards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Rewards"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_cream" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_section_gifts"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_room_menu_button_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_room_gifts" />

                    <TextView
                        android:id="@+id/text_section_gifts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Gifts"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_cream" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_section_tools"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_room_menu_button_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_room_ornament" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_room_tools" />

                    <TextView
                        android:id="@+id/text_section_tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Tools"
                        android:textAppearance="@style/TextAppearance.Kappa.Body"
                        android:textColor="@color/kappa_cream" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/room_section_nav_host"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:defaultNavHost="false"
        app:layout_constraintTop_toBottomOf="@+id/room_menu_scroll"
        app:layout_constraintBottom_toTopOf="@+id/layout_room_actions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:navGraph="@navigation/room_section_navigation" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_leave_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Leave Room"
        style="@style/Widget.Kappa.Button.Secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/layout_room_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/button_leave_room"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/button_room_action_seat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_room_menu_button"
            android:contentDescription="@null"
            android:src="@drawable/ic_room_seats"
            android:tint="@color/kappa_cream" />

        <ImageButton
            android:id="@+id/button_room_action_chat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_room_menu_button"
            android:contentDescription="@null"
            android:src="@drawable/ic_room_chat"
            android:tint="@color/kappa_cream" />

        <ImageButton
            android:id="@+id/button_room_action_gift"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_room_menu_button"
            android:contentDescription="@null"
            android:src="@drawable/ic_room_gifts"
            android:tint="@color/kappa_cream" />

        <ImageButton
            android:id="@+id/button_room_action_tools"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_room_menu_button"
            android:contentDescription="@null"
            android:src="@drawable/ic_room_tools"
            android:tint="@color/kappa_cream" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
