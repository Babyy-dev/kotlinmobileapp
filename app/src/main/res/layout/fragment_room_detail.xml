<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_room_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_room_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Connecting..."
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_audio_processing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Audio processing"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_echo_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Echo cancellation" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_noise_suppression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noise suppression" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_apply_audio_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Apply Audio Settings" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_leave_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Leave Room" />

    <TextView
        android:id="@+id/text_chat_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Chat"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_room_messages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/input_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Type a message"
        android:inputType="text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Send Message" />

    <TextView
        android:id="@+id/text_gift_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gifts"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_gift_log"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:text="No gifts yet"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/input_gift_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Gift amount (coins)"
        android:inputType="number" />

    <EditText
        android:id="@+id/input_gift_recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Recipient user id (optional)"
        android:inputType="text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_send_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Send Gift" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_refresh_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Refresh Chat + Gifts" />

</LinearLayout>
