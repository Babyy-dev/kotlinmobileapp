<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_emerald">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/text_profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textAppearance="@style/TextAppearance.Kappa.Headline"
                    android:textColor="@color/kappa_gold_300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_avatar_ring"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile"
                            android:tint="@color/kappa_cream"
                            android:contentDescription="@string/title_profile" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_profile_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username: -"
                            android:textAppearance="@style/TextAppearance.Kappa.Section"
                            android:textColor="@color/kappa_cream" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_profile_role"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_pill_gold"
                                android:text="Role: -"
                                android:textColor="@color/kappa_charcoal"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_profile_guest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_pill_teal"
                                android:text="Guest: -"
                                android:textColor="@color/kappa_mint_100"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/kappa_surface"
            app:strokeColor="@color/kappa_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textAppearance="@style/TextAppearance.Kappa.Section.Dark" />

                <TextView
                    android:id="@+id/text_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Email: -"
                    android:textAppearance="@style/TextAppearance.Kappa.Body.Dark" />

                <TextView
                    android:id="@+id/text_profile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Phone: -"
                    android:textAppearance="@style/TextAppearance.Kappa.Body.Dark" />

                <TextView
                    android:id="@+id/text_profile_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Nickname: -"
                    android:textAppearance="@style/TextAppearance.Kappa.Body.Dark" />

                <TextView
                    android:id="@+id/text_profile_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Country: -"
                    android:textAppearance="@style/TextAppearance.Kappa.Body.Dark" />

                <TextView
                    android:id="@+id/text_profile_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Language: -"
                    android:textAppearance="@style/TextAppearance.Kappa.Body.Dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_profile_role_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/kappa_surface"
            app:strokeColor="@color/kappa_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_profile_role_tools_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role tools"
                    android:textAppearance="@style/TextAppearance.Kappa.Section.Dark" />

                <TextView
                    android:id="@+id/text_profile_role_tools_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Moderator tools are enabled for your role."
                    android:textAppearance="@style/TextAppearance.Kappa.Muted.Dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Update nickname"
            style="@style/Widget.Kappa.TextInput">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_profile_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Update country"
            style="@style/Widget.Kappa.TextInput">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Update language"
            style="@style/Widget.Kappa.TextInput">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_profile_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_profile_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Choose Avatar"
            style="@style/Widget.Kappa.Button.Secondary" />

        <TextView
            android:id="@+id/text_profile_avatar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="No avatar selected"
            android:textAppearance="@style/TextAppearance.Kappa.Muted" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_profile_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Save Profile" />

        <TextView
            android:id="@+id/text_profile_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Kappa.Muted"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Logout"
            style="@style/Widget.Kappa.Button.Secondary" />

    </LinearLayout>
</ScrollView>
