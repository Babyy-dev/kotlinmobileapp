<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_emerald"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".audio.presentation.RoomsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_panel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/text_rooms_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Rooms"
                android:textAppearance="@style/TextAppearance.Kappa.Headline"
                android:textColor="@color/kappa_gold_300" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Pick a lounge and join the vibe."
                android:textAppearance="@style/TextAppearance.Kappa.Body"
                android:textColor="@color/kappa_mint_100" />
        </LinearLayout>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/progress_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_rooms_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/error"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_refresh_rooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Refresh"
            style="@style/Widget.Kappa.Button.Secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_create_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create Room" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_rooms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_card_glass"
        android:padding="8dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_room" />

</LinearLayout>
