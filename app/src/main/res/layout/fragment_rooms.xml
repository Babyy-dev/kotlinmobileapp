<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_emerald"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".audio.presentation.RoomsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_top_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="14dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tab_rooms_meu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Meu"
                android:textAppearance="@style/TextAppearance.Kappa.Section"
                android:textColor="@color/kappa_gold_300" />

            <TextView
                android:id="@+id/tab_rooms_popular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Popular"
                android:textAppearance="@style/TextAppearance.Kappa.Section"
                android:textColor="@color/kappa_cream" />

            <TextView
                android:id="@+id/tab_rooms_posts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Postagens"
                android:textAppearance="@style/TextAppearance.Kappa.Section"
                android:textColor="@color/kappa_cream" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/section_rooms_meu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meu sala"
        android:textAppearance="@style/TextAppearance.Kappa.Section"
        android:textColor="@color/kappa_gold_300" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/kappa_surface"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/kappa_gold_500"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="14dp">

            <FrameLayout
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:background="@drawable/bg_room_thumbnail">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala VIP"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_mint_100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="ID: 000001"
                    android:textAppearance="@style/TextAppearance.Kappa.Body"
                    android:textColor="@color/kappa_mint_100" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pill_gold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="VIP"
                android:textColor="@color/kappa_teal_950"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recentes"
            android:textAppearance="@style/TextAppearance.Kappa.Section"
            android:textColor="@color/kappa_gold_300" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_rooms"
            android:tint="@color/kappa_mint_100" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_room_thumbnail" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_room_thumbnail" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_room_thumbnail" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_room_thumbnail" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meu seguidores"
        android:textAppearance="@style/TextAppearance.Kappa.Section"
        android:textColor="@color/kappa_gold_300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_room_row"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_avatar_ring"
                android:padding="6dp"
                android:src="@drawable/ic_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala VIP"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_gold_300" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Grupo VIP"
                    android:textAppearance="@style/TextAppearance.Kappa.Body"
                    android:textColor="@color/kappa_mint_100" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pill_teal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="VIP"
                android:textColor="@color/kappa_mint_100"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_room_row"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_avatar_ring"
                android:padding="6dp"
                android:src="@drawable/ic_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala favorito"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_gold_300" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="ID: 002230"
                    android:textAppearance="@style/TextAppearance.Kappa.Body"
                    android:textColor="@color/kappa_mint_100" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pill_teal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="0"
                android:textColor="@color/kappa_mint_100"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_header_panel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/text_rooms_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Rooms"
                android:textAppearance="@style/TextAppearance.Kappa.Headline"
                android:textColor="@color/kappa_gold_300" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Pick a lounge and join the vibe."
                android:textAppearance="@style/TextAppearance.Kappa.Body"
                android:textColor="@color/kappa_mint_100" />
        </LinearLayout>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/progress_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_rooms_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/error"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_refresh_rooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Refresh"
            style="@style/Widget.Kappa.Button.Secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_create_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create Room" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_open_games"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Open Mini Games"
        style="@style/Widget.Kappa.Button.Secondary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_card_glass"
        android:padding="8dp"
        tools:listitem="@layout/item_room" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_rooms_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_panel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Rooms"
                    android:textAppearance="@style/TextAppearance.Kappa.Headline"
                    android:textColor="@color/kappa_gold_300" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Salas em alta para você."
                    android:textAppearance="@style/TextAppearance.Kappa.Body"
                    android:textColor="@color/kappa_mint_100" />
            </LinearLayout>
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_rooms_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card_glass"
            android:padding="8dp"
            tools:listitem="@layout/item_room" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_rooms_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/kappa_surface"
            app:strokeColor="@color/kappa_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postagens"
                    android:textAppearance="@style/TextAppearance.Kappa.Section"
                    android:textColor="@color/kappa_gold_300" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Feed em construção."
                    android:textAppearance="@style/TextAppearance.Kappa.Body"
                    android:textColor="@color/kappa_mint_100" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>
